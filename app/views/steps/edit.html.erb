<div class="container mt-5">
	<div class="form-group row">    
		<div class="col-sm-10">
			<%= form_for @step, url: klass_step_path(@klass, @step), method: :put do |f| %>
					<%= f.text_field :name, class:"form-control form-control-lg", id:"colFormLabelLg", placeholder:"Title"%>
					<%= f.text_field :description, class:"form-control", id:"colFormLabel", placeholder:"Description" %>
					<%= f.submit class:"btn btn-primary mb-2" %>
			<% end %>
		</div>
	</div>
</div>