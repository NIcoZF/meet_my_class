<div class="container-fluid">

  <!-- start page title -->
  <div class="row">
    <div class="col-12">
      <div class="page-title-box">
        <h4 class="page-title">Klass Details</h4>
      </div>
    </div>
  </div>
  <!-- end page title -->

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-5">
              <!-- Product title -->
              <h2 class="mt-0"><%= @klass.title %><a href="javascript: void(0);" class="text-muted"><i
                    class="mdi mdi-square-edit-outline ml-2"></i></a> </h2>
              <p class="mb-1"><%= @klass.teacher.email %></p>
              <!-- Product stock -->
              <div class="mt-3">
                <h4><span class="badge badge-success-lighten">ACTIVE</span></h4>
              </div>

            </div> <!-- end col -->
            <div class="col-lg-7">

              <!-- Product description -->
              <div class="mt-4">
                <h6 class="font-14">Description:</h6>
                <p>
                  <%= @klass.description %>
                </p>
              </div>

              <!-- Product information -->
              <div class="mt-4">
                <div class="row">
                  <div class="col-md-6">
                    <h6 class="font-14">Nombre d'étudiants :</h6>
                    <p class="text-sm lh-150"><%= @klass.students.count %></p>
                  </div>
                  <div class="col-md-6">
                    <h6 class="font-14">Nombre de questions :</h6>
                    <p class="text-sm lh-150"><%= @klass.questions.count %></p>
                  </div>
                </div>
              </div>

            </div> <!-- end col -->
          </div> <!-- end row-->
          <div class="row mt-3">
            <h3>Étapes</h3>
          <!-- STEPS TABLE -->
          <div class="table-responsive">
            <table class="table table-bordered table-centered mb-0">
              <thead class="thead-light">
                <tr>
                  <th>Étapes</th>
                  <th>Progession d'ensemble</th>
                  <th>Fait</th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: 'klasses/partial/show_index_steps', collection: @steps, as: 'step' %>
              </tbody>
            </table>
          </div>
        </div>

          <!-- QUESTIONS TABLE -->
          <div class="row mt-5">
            <h3>Questions</h3>
          <div class="table-responsive">
              <%= link_to "Poser une question", new_klass_question_path(@klass), class: "btn btn-success m-2" %>
              <table class="table table-bordered table-centered mb-0">
              <thead class="thead-light">
                <tr>
                  <th>Questions</th>
                  <th>Nombre de votes</th>
                  <th>Voter !</th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: 'klasses/partial/show_index_questions', collection: @questions, as: 'question' %>
              </tbody>
            </table>
          </div>
        </div>
          <!-- <div>
            <%= render partial: "klasses/partial/students_step" %>
          </div>
          <section>
            <div>
              <div><%= render partial: "klasses/partial/student_questions" %></div>
            </div>-->
            <% if current_user%>
            <p>
              <div><%= render partial: "klasses/partial/student_attendance" %></div>
            <p>
            <% end %>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
